{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["xo", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "arrow-parens": ["error", "always"],
    "camelcase": [
      "error",
      {
        "properties": "never"
      }
    ],
    "indent": "off",
    "object-curly-spacing": ["error", "always"],
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "^[A-Z]"
      }
    ]
  }
}
